{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "name": "Launch NodeJS",
            "program": "${workspaceRoot}/src/index.ts",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "args": [
                "-debug"
            ],
            "preLaunchTask": "npm: predebug",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Fast Launch NodeJS (run tsc --watch before in the background)",
            "program": "${workspaceRoot}/src/index.ts",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "args": [
                "-debug"
            ],
            "preLaunchTask": "npm: copy-config",
            "outputCapture": "std"
        },
        {
            "name": "Launch Angular",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceRoot}/angular-src"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}/angular-src"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
            "args": [
                "--inspect-brk"
            ],
            "env": {
                "NODE_ENV": "test"
            },
            "port": 9229,
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        },
        {
            "name": "Docker Node.js Launch and Attach",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node"
        }
    ]
}